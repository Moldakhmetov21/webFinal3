<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Exchange Rates</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.1.2/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        /* Base styles for a professional trading website */
        body {
            font-family: 'Arial', sans-serif; /* Updated font for consistency */
            background: #f8f9fa url('https://wallpapers.com/images/featured/stock-market-pd5zksxr07t7a4xu.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #333; /* Text color for readability */
        }
    
        /* Styling for the exchange rate chart container */
        #exchangeRateChart {
            max-width: 600px;
            margin: 2rem auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Added subtle shadow for depth */
            border-radius: 8px; /* Rounded corners */
            overflow: hidden; /* Ensures no content spills out */
            background: #ffffff; /* White background for chart clarity */
        }
    
        /* Styling for the list container that holds exchange rate items */
        .list-container {
            max-width: 600px;
            margin: 2rem auto;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
            background: #ffffff;
        }
    
        /* Exchange rate item styling for a clean and professional look */
        .rate-item {
            background-color: #f8f9fa; /* Light grey background */
            border-bottom: 1px solid #dee2e6; /* Consistent with table styling */
            padding: 0.75rem 1.25rem; /* Slightly larger padding for better spacing */
            display: flex; /* Flex layout for better alignment */
            justify-content: space-between; /* Spacing out content */
            align-items: center; /* Vertical center alignment */
        }
    
        /* Removing the border for the last item for a cleaner look */
        .rate-item:last-child {
            border-bottom: none;
        }
    
        /* Span styling within rate items for proper spacing and emphasis */
        .rate-item > span {
            display: inline-block;
            min-width: 100px;
            color: #333; /* Dark color for contrast */
            font-weight: bold; /* Bold font weight for emphasis */
        }
    
        /* Header styles for consistency with the rest of the site's aesthetic */
        h1 {
            color: #000000; /* Brand blue for header text */
            font-size: 2rem; /* Scaled size for better visibility */
            font-weight: bold;
            text-align: center; /* Center alignment for prominence */
            margin-top: 1rem; /* Added top margin for spacing */
        }
    </style>
    
</head>
<body class="bg-blue-50">
    <div class="text-center">
        <h1>Exchange Rates</h1>
        <div id="exchangeRateChart"></div>
        <div class="list-container bg-white rounded shadow">
            <% for(const [currency, rate] of Object.entries(rates)) { %>
                <div class="rate-item">
                    <span class="font-semibold"><%= currency %>:</span>
                    <%= rate %>
                </div>
            <% } %>
        </div>
    </div>
    <script>
        const ctx = document.getElementById('exchangeRateChart').getContext('2d');
        const exchangeRateChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: Object.keys(ratesData),
                datasets: [{
                    label: 'Exchange Rate',
                    data: Object.values(ratesData),
                    backgroundColor: 'rgba(59, 130, 246, 0.5)',
                    borderColor: 'rgba(59, 130, 246, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                legend: {
                    display: false
                }
            }
        });
    </script>
</body>
</html>
